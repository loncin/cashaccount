.container {
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, #6A5ACD, #483D8B);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  margin-top: 100rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.empty-state .icon {
  font-size: 140rpx;
  margin-bottom: 40rpx;
}

.empty-state .tip {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 50rpx;
  font-weight: 500;
}

.go-btn {
  background: linear-gradient(135deg, #8A2BE2, #6A5ACD);
  color: #fff;
  border-radius: 100rpx;
  padding: 20rpx 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 20rpx rgba(106, 90, 205, 0.3);
}

/* 列表样式 */
.favorite-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding-bottom: 60rpx;
}

.favorite-item {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.favorite-item:active {
  transform: scale(0.98);
  background-color: #f9f9ff;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.type-tag {
  font-size: 22rpx;
  color: #6A5ACD;
  background: #f0eeff;
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  font-weight: 600;
}

.date {
  font-size: 22rpx;
  color: #999;
}

.title {
  font-size: 38rpx;
  font-weight: 800;
  color: #1a1a1a;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.intro {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.6;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #f2f2f2;
  padding-top: 24rpx;
  margin-top: 10rpx;
}

.detail-link {
  font-size: 24rpx;
  color: #6A5ACD;
  font-weight: 700;
  display: flex;
  align-items: center;
}

.detail-link::after {
  content: '→';
  margin-left: 8rpx;
  font-size: 28rpx;
}

.delete-btn {
  font-size: 22rpx;
  color: #ff4d4f;
  background: #fff1f0;
  padding: 10rpx 24rpx;
  border-radius: 100rpx;
  font-weight: 500;
}
