.container {
  padding: 40rpx;
  background-color: #6A5ACD;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  color: #fff;
}

.type-tag {
  font-size: 28rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
}

.ai-tag {
  font-size: 22rpx;
  background-color: rgba(255, 255, 255, 0.3);
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
}

.content-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  flex: 1;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.intro {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 40rpx;
}

.section-box {
  background-color: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-header .icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.section-header .label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.reason-box .text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.itinerary-section {
  margin-bottom: 40rpx;
}

.itinerary-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.itinerary-item {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.day-num {
  width: 40rpx;
  height: 40rpx;
  background-color: #6A5ACD;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
  margin-top: 6rpx;
}

.day-content {
  flex: 1;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
}

.day-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.day-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.notice-box .notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  display: flex;
  gap: 10rpx;
  align-items: flex-start;
}

.notice-item .icon {
  font-size: 24rpx;
  margin-top: 4rpx;
}

.notice-item .text {
  font-size: 24rpx;
  color: #666;
}

.footer-actions {
  display: flex;
  gap: 30rpx;
  padding: 40rpx 0;
}

.btn {
  flex: 1;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-regenerate {
  background-color: #f8f9fa;
  color: #333;
}

.btn-collect {
  background: linear-gradient(90deg, #FF69B4, #EE82EE);
  color: #fff;
}

.btn-share {
  background: linear-gradient(90deg, #4facfe, #00f2fe);
  color: #fff;
}
