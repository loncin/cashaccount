.container {
  padding: 30rpx;
  background: linear-gradient(135deg, #6A5ACD, #483D8B);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  color: #fff;
}

.type-tag {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  padding: 10rpx 30rpx;
  border-radius: 100rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.ai-badge {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  background: rgba(0, 0, 0, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  opacity: 0.9;
}

.ai-icon {
  margin-right: 8rpx;
}

.content-card {
  background: #ffffff;
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  flex: 1;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.title-section {
  margin-bottom: 30rpx;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1a1a1a;
  line-height: 1.3;
  flex: 1;
}

.nav-btn {
  background: #f0eeff;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #6A5ACD;
  font-weight: 600;
  border: 2rpx solid rgba(106, 90, 205, 0.1);
  flex-shrink: 0;
}

.nav-btn .icon {
  margin-right: 6rpx;
  font-size: 28rpx;
}

.divider {
  width: 80rpx;
  height: 8rpx;
  background: #6A5ACD;
  border-radius: 4rpx;
}

.intro {
  font-size: 30rpx;
  color: #4a4a4a;
  line-height: 1.7;
  margin-bottom: 40rpx;
  font-style: italic;
  opacity: 0.9;
}

/* 天气样式 */
.weather-section {
  margin-bottom: 50rpx;
}

.weather-card {
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  padding: 30rpx;
  border-radius: 24rpx;
  border: 2rpx solid #bae6fd;
}

.weather-main {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.weather-main .temp {
  font-size: 40rpx;
  font-weight: 800;
  color: #0369a1;
  margin-right: 20rpx;
}

.weather-main .desc {
  font-size: 28rpx;
  color: #0c4a6e;
  font-weight: 600;
}

.weather-tips {
  font-size: 24rpx;
  color: #0369a1;
  line-height: 1.5;
  display: flex;
  align-items: flex-start;
}

.tips-label {
  font-weight: bold;
  flex-shrink: 0;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-header .icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.section-header .label {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 1rpx;
}

/* 深度亮点样式 */
.highlight-section {
  background: #f0f0ff;
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 50rpx;
  border-left: 10rpx solid #6A5ACD;
}

.reason-content .text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
}

/* 时间轴样式 */
.itinerary-section {
  margin-bottom: 50rpx;
}

.timeline {
  padding-left: 20rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 40rpx;
  padding-left: 50rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-line {
  position: absolute;
  left: 0;
  top: 10rpx;
  bottom: 0;
  width: 2rpx;
  background: #e0e0e0;
}

.timeline-item:last-child .timeline-line {
  display: none;
}

.timeline-dot {
  position: absolute;
  left: -9rpx;
  top: 10rpx;
  width: 20rpx;
  height: 20rpx;
  background: #6A5ACD;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 10rpx rgba(106, 90, 205, 0.3);
  z-index: 1;
}

.day-badge {
  display: inline-block;
  font-size: 20rpx;
  font-weight: bold;
  color: #6A5ACD;
  background: #e8e6ff;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  margin-bottom: 12rpx;
}

.day-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.day-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 旅行贴士样式 */
.tips-section {
  background: #fff9f0;
  padding: 30rpx;
  border-radius: 24rpx;
}

.tips-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
}

.tip-dot {
  color: #ffa500;
  margin-right: 12rpx;
  font-weight: bold;
}

.tip-text {
  font-size: 26rpx;
  color: #7c5a00;
  line-height: 1.5;
}

/* 底部按钮样式 */
.footer-actions {
  display: flex;
  gap: 30rpx;
  padding: 50rpx 0;
}

.btn {
  flex: 1;
  height: 90rpx;
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.btn-regenerate {
  background: #ffffff;
  color: #6A5ACD;
  border: 2rpx solid #6A5ACD;
}

.btn-collect {
  background: linear-gradient(135deg, #6A5ACD, #8A2BE2);
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(106, 90, 205, 0.3);
}

.btn-share {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(79, 172, 254, 0.3);
}
