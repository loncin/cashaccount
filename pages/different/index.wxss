.container {
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, #6A5ACD, #483D8B);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.header {
  text-align: center;
  color: #fff;
  margin-bottom: 50rpx;
  padding-top: 20rpx;
}

.title {
  font-size: 46rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 30rpx;
  background: #6A5ACD;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

/* 选择推荐类型卡片 */
.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.type-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.type-item {
  background-color: #f5f6fa;
  padding: 30rpx 20rpx;
  border-radius: 24rpx;
  text-align: center;
  border: 4rpx solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.type-item.active {
  border-color: #6A5ACD;
  background-color: #eeecff;
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(106, 90, 205, 0.15);
}

.type-item:last-child:nth-child(odd) {
  grid-column: span 2;
}

.type-item .icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
  display: block;
}

.type-item .name {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
}

.type-item .desc {
  font-size: 20rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 筛选条件卡片 */
.filter-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.location-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f0f1f6;
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  border: 1px solid rgba(0,0,0,0.03);
}

.location-info {
  display: flex;
  align-items: center;
}

.location-info .icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.location-text {
  font-size: 26rpx;
  color: #444;
  font-weight: 500;
  max-width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.refresh-btn {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #6A5ACD;
  background: #fff;
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  box-shadow: 0 2rpx 8rpx rgba(106, 90, 205, 0.1);
}

.icon-refresh {
  margin-right: 6rpx;
  font-size: 24rpx;
}

.filter-group {
  margin-bottom: 44rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-group .label {
  font-size: 26rpx;
  color: #666;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: block;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 12rpx 32rpx;
  background-color: #f5f6fa;
  color: #666;
  border-radius: 100rpx;
  font-size: 24rpx;
  transition: all 0.2s;
  border: 1px solid transparent;
}

.tag.active {
  background-color: #6A5ACD;
  color: #fff;
  font-weight: 600;
  box-shadow: 0 6rpx 16rpx rgba(106, 90, 205, 0.25);
}

/* 滑块样式 */
.slider-box {
  margin-top: 36rpx;
  background: #f9f9fc;
  padding: 30rpx 20rpx;
  border-radius: 24rpx;
}

.slider-tip {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 16rpx;
}

.slider-tip .highlight {
  color: #6A5ACD;
  font-weight: 700;
  font-size: 30rpx;
  margin: 0 6rpx;
}

/* 底部按钮 */
.footer-btn {
  padding: 20rpx 0 60rpx;
}

.generate-btn {
  background: linear-gradient(135deg, #8A2BE2, #6A5ACD);
  color: #fff;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
  box-shadow: 0 15rpx 40rpx rgba(106, 90, 205, 0.4);
  transition: all 0.2s;
}

.generate-btn:active {
  transform: scale(0.97);
  box-shadow: 0 5rpx 20rpx rgba(106, 90, 205, 0.3);
}
