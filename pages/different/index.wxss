.container {
  padding: 40rpx;
  background-color: #6A5ACD;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  color: #fff;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}

.card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.type-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.type-item {
  background-color: #f8f9fa;
  padding: 30rpx;
  border-radius: 20rpx;
  text-align: center;
  border: 4rpx solid transparent;
}

.type-item.active {
  border-color: #6A5ACD;
  background-color: #f0f0ff;
}

.type-item:last-child:nth-child(odd) {
  grid-column: span 2;
}

.type-item .icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
  display: block;
}

.type-item .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.type-item .desc {
  font-size: 20rpx;
  color: #888;
  margin-top: 4rpx;
}

.filter-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  flex: 1;
}

.filter-group {
  margin-bottom: 40rpx;
}

.filter-group .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 10rpx 30rpx;
  background-color: #f0f1f4;
  color: #666;
  border-radius: 40rpx;
  font-size: 24rpx;
  transition: all 0.2s;
}

.tag.active {
  background-color: #6A5ACD;
  color: #fff;
}

.slider-box {
  margin-top: 30rpx;
  padding: 0 10rpx;
}

.slider-tip {
  text-align: center;
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
}

.slider-tip .highlight {
  color: #6A5ACD;
  font-weight: bold;
  font-size: 28rpx;
}

.footer-btn {
  padding: 40rpx 0;
}

.generate-btn {
  background: linear-gradient(90deg, #8A2BE2, #6A5ACD);
  color: #fff;
  border-radius: 50rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(106, 90, 205, 0.4);
}
