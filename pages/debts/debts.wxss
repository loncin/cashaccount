.container {
  padding: 30rpx;
  align-items: stretch;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  color: #4facfe;
  font-size: 30rpx;
}

.debt-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.debt-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-left .person {
  font-size: 32rpx;
  font-weight: 500;
}

.item-left .note {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.type-tag {
  display: inline-block;
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 6rpx;
  margin-top: 10rpx;
}

.type-tag.lent { background: #e3f2fd; color: #1976d2; }
.type-tag.borrowed { background: #fff3e0; color: #f57c00; }

.item-right {
  font-size: 36rpx;
  font-weight: bold;
}

.plus { color: #07c160; }
.minus { color: #fa5151; }

.hint {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 40rpx;
}

.empty {
  text-align: center;
  color: #ccc;
  padding: 100rpx 0;
}

/* Modal and Type Switch */
.type-switch {
  display: flex;
  background: #f0f0f0;
  border-radius: 40rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.switch-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #666;
}

.switch-item.active { color: white; }
.switch-item.active.lent { background: #4facfe; }
.switch-item.active.borrowed { background: #ffa726; }

.modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  width: 85%;
  padding: 40rpx;
  border-radius: 20rpx;
}

.modal-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.input-group text {
  width: 160rpx;
  font-size: 28rpx;
}

.modal-input, .picker-val {
  flex: 1;
  border: 1rpx solid #ddd;
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  margin-top: 30rpx;
}

.modal-footer button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
}

.confirm { background: #4facfe; color: white; }
