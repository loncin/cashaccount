.container {
  padding: 0;
  align-items: stretch;
  justify-content: flex-start;
}

.overview-card {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  width: 90%;
  padding: 40rpx;
  border-radius: 20rpx;
  color: white;
  margin-top: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
}

.overview-card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-actions {
  display: flex;
  gap: 10rpx;
}

.overview-card .title {
  font-size: 24rpx;
  opacity: 0.8;
}

.export-btn {
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.overview-card .amount {
  font-size: 60rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  border-top: 1rpx solid rgba(255,255,255,0.2);
  padding-top: 20rpx;
}

.stat-item {
  flex: 1;
}

.stat-item .label {
  font-size: 22rpx;
  display: block;
  opacity: 0.8;
}

.stat-item .value {
  font-size: 32rpx;
  font-weight: 500;
}

.budget-section {
  margin-top: 30rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 20rpx;
  border-radius: 12rpx;
}

.budget-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.budget-progress {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.budget-progress .progress-bar {
  height: 100%;
  background: #fff;
  transition: width 0.3s;
}

.budget-progress .progress-bar.danger {
  background: #ff4d4f;
}

.set-hint {
  font-size: 24rpx;
  text-align: center;
  opacity: 0.8;
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  width: 90%;
  margin: 20rpx 0;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.search-bar input {
  flex: 1;
  margin: 0 15rpx;
  font-size: 28rpx;
}

.calendar-icon {
  font-size: 32rpx;
  padding: 0 15rpx;
  color: #4facfe;
}

/* Modal from members.wxss concept */
.modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  width: 80%;
  padding: 40rpx;
  border-radius: 20rpx;
  color: #333;
}

.modal-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.modal-input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

.modal-footer {
  display: flex;
}

.modal-footer button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 30rpx;
}

.cancel { background: #eee; }
.confirm { background: #4facfe; color: white; }

.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  padding: 30rpx 0;
}

.type-selector text {
  padding: 10rpx 20rpx;
  margin-left: 10rpx;
  border-radius: 30rpx;
  background: #eee;
  font-size: 24rpx;
}

.type-selector text.active {
  background: #4facfe;
  color: white;
}

.transaction-list {
  flex: 1;
  width: 100%;
}

.transaction-item {
  background: white;
  margin: 10rpx 20rpx;
  padding: 30rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}

.item-icon {
  font-size: 50rpx;
  margin-right: 20rpx;
  width: 70rpx;
  text-align: center;
}

.item-left {
  flex: 1;
}

.item-left .category {
  font-size: 32rpx;
  font-weight: 500;
}

.item-left .info {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.item-left .member {
  margin-right: 20rpx;
}

.receipt-tag {
  display: inline-block;
  background: #e8f5e9;
  color: #4caf50;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.account-tag {
  display: inline-block;
  background: #fff3e0;
  color: #ff9800;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.item-right {
  font-size: 36rpx;
  font-weight: bold;
}

.plus { color: #07c160; }
.minus { color: #fa5151; }

.empty {
  text-align: center;
  color: #999;
  padding-top: 100rpx;
}
