<view class="container">
  <!-- 用户信息区 -->
  <view class="user-section">
    <block wx:if="{{hasUserInfo}}">
      <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
      <view class="user-info">
        <text class="nickname">{{userInfo.nickName}}</text>
        <text class="group-tag">当前账本: {{currentGroupName}}</text>
      </view>
    </block>
    <block wx:else>
      <view class="login-btn" bindtap="login">
        <image class="avatar-placeholder" src="/images/default-avatar.png"></image>
        <text>点击登录</text>
      </view>
    </block>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-list">
    <view class="menu-group">
      <view class="menu-item" bindtap="navTo" data-url="/pages/calendar/calendar">
        <view class="item-left">
          <text class="icon">📅</text>
          <text class="label">日历视图</text>
        </view>
        <view class="item-right">
          <text class="arrow">></text>
        </view>
      </view>
      <view class="menu-item" bindtap="navTo" data-url="/pages/groups/groups">
        <view class="item-left">
          <text class="icon">📚</text>
          <text class="label">账本管理</text>
        </view>
        <view class="item-right">
          <text class="val">{{currentGroupName}}</text>
          <text class="arrow">></text>
        </view>
      </view>
      <view class="menu-item" bindtap="navTo" data-url="/pages/members/members">
        <view class="item-left">
          <text class="icon">👥</text>
          <text class="label">成员管理</text>
        </view>
        <view class="item-right">
          <text class="arrow">></text>
        </view>
      </view>
    </view>

    <view class="menu-group">
      <view class="menu-item" bindtap="navTo" data-url="/pages/categories/categories">
        <view class="item-left">
          <text class="icon">🏷️</text>
          <text class="label">分类管理</text>
        </view>
        <view class="item-right">
          <text class="arrow">></text>
        </view>
      </view>
      <view class="menu-item" bindtap="navTo" data-url="/pages/accounts/accounts">
        <view class="item-left">
          <text class="icon">💳</text>
          <text class="label">资金账户</text>
        </view>
        <view class="item-right">
          <text class="arrow">></text>
        </view>
      </view>
      <view class="menu-item" bindtap="navTo" data-url="/pages/debts/debts">
        <view class="item-left">
          <text class="icon">🤝</text>
          <text class="label">债务管理</text>
        </view>
        <view class="item-right">
          <text class="arrow">></text>
        </view>
      </view>
    </view>

    <view class="menu-group">
      <view class="menu-item" bindtap="clearCache">
        <view class="item-left">
          <text class="icon">🧹</text>
          <text class="label">清理缓存</text>
        </view>
        <view class="item-right">
          <text class="arrow">></text>
        </view>
      </view>
      <view class="menu-item" bindtap="about">
        <view class="item-left">
          <text class="icon">ℹ️</text>
          <text class="label">关于系统</text>
        </view>
        <view class="item-right">
          <text class="arrow">></text>
        </view>
      </view>
    </view>
  </view>
</view>
