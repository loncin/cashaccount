.container {
  padding: 0;
  align-items: stretch;
  justify-content: flex-start;
}

.top-bar {
  width: 100%;
  display: flex;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.home-btn {
  font-size: 24rpx;
  background: #f8f9fa;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid #eee;
  color: #666;
}

.type-switch {
  display: flex;
  width: 90%;
  background: #eee;
  border-radius: 40rpx;
  margin: 40rpx 0;
  overflow: hidden;
}

.switch-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #666;
}

.switch-item.active {
  color: white;
}

.switch-item.active.expense {
  background: #fa5151;
}

.switch-item.active.income {
  background: #07c160;
}

.form-container {
  width: 90%;
  background: white;
  border-radius: 20rpx;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item.no-border {
  border-bottom: none;
}

.image-uploader {
  padding: 10rpx 0;
}

.img-preview {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.img-preview image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.img-remove {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.form-item .label {
  width: 120rpx;
  font-size: 30rpx;
  color: #333;
}

.form-item .input, .picker-val {
  flex: 1;
  font-size: 30rpx;
  color: #000;
}

.ocr-btn {
  background: #f0faff;
  color: #4facfe;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.submit-btn {
  width: 90%;
  margin-top: 60rpx;
  border-radius: 40rpx;
  color: white;
  font-size: 34rpx;
}

.submit-btn.expense {
  background: #fa5151;
}

.submit-btn.income {
  background: #07c160;
}

/* Calendar Modal Styles */
.calendar-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
}

.calendar-modal.show {
  visibility: visible;
}

.calendar-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  opacity: 0;
  transition: opacity 0.3s;
}

.calendar-modal.show .calendar-mask {
  opacity: 1;
}

.calendar-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
  padding-bottom: env(safe-area-inset-bottom);
}

.calendar-modal.show .calendar-content {
  transform: translateY(0);
}

.calendar-header {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.confirm-btn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  color: #07c160;
  font-size: 30rpx;
  font-weight: bold;
}

.month-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.month-arrow {
  padding: 10rpx 30rpx;
  color: #666;
  font-size: 32rpx;
}

.current-month {
  font-size: 34rpx;
  font-weight: bold;
  width: 200rpx;
  text-align: center;
}

.weekdays {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.weekdays view {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.days-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.day-item {
  width: 14.28%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.day-item.empty {
  visibility: hidden;
}

.day-item.selected {
  background: #07c160;
  color: white;
  border-radius: 50%;
  width: 80rpx;
  margin: 0 auto 10rpx auto;
}

/* 适配支出模式下的选中颜色 */
.type-switch .switch-item.active.expense ~ .calendar-modal .day-item.selected { 
  /* This selector won't work because calendar-modal is not a sibling of switch-item active */
}

/* 动态样式可以通过 inline style 或者 js 控制 class，这里简化处理，默认绿色，或者根据 type 改变 class */
.submit-btn.expense ~ .calendar-modal .day-item.selected {
  /* This works because modal is sibling of submit-btn */
  background: #fa5151;
}

/* Category Modal Styles */
.category-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
}

.category-modal.show {
  visibility: visible;
}

.category-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  opacity: 0;
  transition: opacity 0.3s;
}

.category-modal.show .category-mask {
  opacity: 1;
}

.category-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
  padding-bottom: env(safe-area-inset-bottom);
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.category-modal.show .category-content {
  transform: translateY(0);
}

.category-header {
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  flex-shrink: 0;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
}

.category-grid {
  padding: 30rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  overflow-y: auto;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.category-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  transition: all 0.2s;
  border: 2rpx solid transparent;
}

.category-icon {
  font-size: 50rpx;
}

.category-name {
  font-size: 26rpx;
  color: #666;
}

.submit-btn.expense ~ .category-modal .category-item.selected .category-icon-wrapper {
  background: #ffebeb;
  border-color: #fa5151;
}

.submit-btn.income ~ .category-modal .category-item.selected .category-icon-wrapper {
  background: #e6f9ee;
  border-color: #07c160;
}
