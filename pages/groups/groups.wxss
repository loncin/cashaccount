.container {
  padding: 30rpx;
  align-items: stretch;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  color: #4facfe;
  font-size: 30rpx;
}

.group-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.group-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.group-item.active {
  background: #f0faff;
}

.group-info {
  display: flex;
  align-items: center;
}

.group-icon {
  width: 80rpx;
  height: 80rpx;
  background: #4facfe;
  color: white;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.group-detail {
  display: flex;
  flex-direction: column;
}

.group-name {
  font-size: 32rpx;
  font-weight: 500;
}

.group-status {
  font-size: 22rpx;
  color: #4facfe;
  margin-top: 6rpx;
}

.hint {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 40rpx;
}

/* Modal reuse concepts */
.modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background: white;
  width: 80%;
  padding: 40rpx;
  border-radius: 20rpx;
}

.modal-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.modal-input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.modal-footer {
  display: flex;
}

.modal-footer button {
  flex: 1;
  margin: 0 10rpx;
}

.cancel { background: #eee; }
.confirm { background: #4facfe; color: white; }
