.container {
  padding: 0;
  background: white;
  align-items: stretch;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 60rpx;
  background: #f8f8f8;
}

.current-month {
  font-size: 34rpx;
  font-weight: bold;
}

.arrow {
  padding: 20rpx;
  color: #4facfe;
}

.weekday-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.weekday {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  width: 100%;
}

.day-cell {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.day-num {
  font-size: 30rpx;
  color: #333;
}

.day-cell.selected {
  background: #e1f5fe;
}

.day-cell.selected .day-num {
  color: #4facfe;
  font-weight: bold;
}

.dot-row {
  display: flex;
  margin-top: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin: 0 2rpx;
}

.dot.expense { background: #fa5151; }
.dot.income { background: #07c160; }

.daily-detail {
  flex: 1;
  background: #f8f8f8;
  padding: 20rpx;
}

.detail-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}

.transaction-list {
  height: 500rpx;
}

.transaction-item {
  background: white;
  margin-bottom: 10rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.item-left {
  flex: 1;
}

.category { font-size: 28rpx; font-weight: 500; }
.info { font-size: 22rpx; color: #999; margin-top: 4rpx; }
.item-right { font-size: 32rpx; font-weight: bold; }

.plus { color: #07c160; }
.minus { color: #fa5151; }
