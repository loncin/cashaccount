.container {
  padding: 30rpx;
  align-items: stretch;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-btns {
  display: flex;
  align-items: center;
}

.manage-btn {
  color: #666;
  font-size: 28rpx;
  margin-right: 30rpx;
  background: #eee;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.share-btn {
  background: #07c160;
  color: white;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  line-height: 1.5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-weight: normal;
}

.add-btn {
  color: #4facfe;
  font-size: 26rpx;
}

.member-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  background: #4facfe;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  margin-right: 20rpx;
}

.name {
  font-size: 32rpx;
}

.tag {
  font-size: 20rpx;
  background: #e1f5fe;
  color: #03a9f4;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.delete-btn {
  color: #fa5151;
  font-size: 28rpx;
}

/* Modal */
.modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background: white;
  width: 80%;
  padding: 40rpx;
  border-radius: 20rpx;
}

.modal-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.modal-input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.modal-footer {
  display: flex;
}

.modal-footer button {
  flex: 1;
  margin: 0 10rpx;
}

.cancel { background: #eee; }
.confirm { background: #4facfe; color: white; }
